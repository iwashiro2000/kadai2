<h3>Books</h3>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "Show", book_path(book.id), class:"show_#{book.id}" %>
<%= link_to "Edit", edit_book_path(book.id), class:"edit_#{book.id}" %>
<%= link_to "Delete", book_path(book.id), class:"destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>
<% end %>

</tbody>
</table>

<h2>New Book</h2>
<%= form_for(@book) do |f| %>

	<h4>Titel</h4>
	<%= f.text_field :title, class:"book_title" %>

	<h4>Body</h4>
	<%= f.text_area :body, class:"book_body" %><br>

	<%= f.submit 'Create Book' %>

<% end %>
